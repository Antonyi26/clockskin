	<!-- инидикатор батареи (арка) -->
    <drawable>
        <arraytype>58</arraytype>
		<centerX>-205</centerX>
		<centerY>-140</centerY>
        <width>8</width>
        <radius>50</radius>
        <colorarray>#B22222,#B22222</colorarray>
        <direction>2</direction>
        <angle>360</angle>
        <startAngle>-90</startAngle>
    </drawable>	
	<!-- инидикатор батареи (цифры) -->
	<drawable>
		<name>digit_15x18.xml</name>
		<arraytype>14</arraytype>
		<centerX>-205</centerX>
		<centerY>-140</centerY>
	</drawable>	
	
	<!-- шагомер (окружность с цифрами) -->
	<drawable>
		<name>digit_15x18.xml</name>
		<arraytype>18</arraytype>
		<centerX>-205</centerX>
		<centerY>140</centerY>
		<colorarray>000000,4682B4</colorarray>
	</drawable>
	
</clockskin>